<?xml version="1.0" encoding="UTF-8"?>
<project default="mainGenerator" name="org.ccsl.gen.ocl">
    <property name="ECLIPSE_HOME" value="../../../../../../../usr/local/eclipse/eclipse-2020-06"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../../../tmp/test"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="org.ccsl.gen.ocl.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/org.ccsl.gen.ocl/bin"/>
    </path>

    <path id="org.ccsl.gen.ocl.classpath">
        <path refid="org.ccsl.gen.ocl.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="org.ccsl.gen.ocl.libraryclasspath.alljars">
        <pathelement location="../org.ccsl.gen.ocl/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="org.ccsl.gen.ocl.classpath.alljars">
        <path refid="org.ccsl.gen.ocl.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="mainGenerator">
        <java classname="org.ccsl.gen.ocl.main.MainGenerator" classpathref="org.ccsl.gen.ocl.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="mainGenerator.alljars">
        <java classname="org.ccsl.gen.ocl.main.MainGenerator" classpathref="org.ccsl.gen.ocl.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
